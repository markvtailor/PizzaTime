<resources>
    <!-- Base application theme. -->
    <style name="Theme.PizzaTime" parent="Theme.MaterialComponents.Light.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/pink</item>
        <item name="colorPrimaryVariant">@color/light_gray</item>
        <item name="colorOnPrimary">@color/pink</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" >@color/light_gray</item>
        <!-- Customize your theme here. -->
    </style>
    <style name="category_button"
        parent="TextAppearance.MaterialComponents.Button">
        <item name="backgroundTint">@color/white</item>
        <item name="tintMode">multiply</item>
        <item name="android:textColor">@color/gray</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textSize">14sp</item>
        <item name="cornerRadius">8dp</item>
    </style>
    <style name="price_button"
        parent="TextAppearance.MaterialComponents.Button" >
        <item name="backgroundTint">@color/white</item>
        <item name="tintMode">multiply</item>
        <item name="strokeWidth">1dp</item>
        <item name="strokeColor">@color/pink</item>
        <item name="android:textColor">@color/pink</item>
        <item name="android:textAllCaps">false</item>
        <item name="cornerRadius">8dp</item>
        <item name="android:layout_gravity">end</item>

    </style>

</resources>